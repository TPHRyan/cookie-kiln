{
  "compilerOptions": {
	"module": "ESNext",
	"moduleResolution": "Node",
	"esModuleInterop": true,
	"target": "ES2021",
	"resolveJsonModule": true,
	"baseUrl": "src",
	"rootDir": ".",
	"outDir": "dist",
	"noEmit": true,
	"sourceMap": false,
	"strict": true,
	"typeRoots": ["./node_modules/@types", "./@types"]
  },
  "files": ["src/main.ts", "src/global.d.ts", "./rollup.config.ts"],
  "exclude": [
    "node_modules"
  ]
}
