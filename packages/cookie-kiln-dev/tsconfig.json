{
  "compilerOptions": {
	"composite": true,
	"module": "ESNext",
	"moduleResolution": "Node",
	"target": "ES2021",

	"outDir": "build",
	"sourceMap": false,
	"declaration": true,
	"declarationDir": ".",

	"strict": true,
	"esModuleInterop": true,
	"resolveJsonModule": true,

	"typeRoots": [
	  "./node_modules/@types",
	  "./@types"
	],
	"types": [
	  "cookie-clicker-types",
	  "cookie-kiln",
	  "node",
	  "tampermonkey"
	]
  },
  "include": [
	"./package.json",
	"src/**/*.ts",
	"./rollup.config.ts"
  ],
  "exclude": [
	"node_modules",
	"./dist"
  ],
  "references": [
	{
	  "path": "../cookie-kiln/tsconfig.json"
	},
	{
	  "path": "./dev-server/tsconfig.json"
	}
  ]
}
