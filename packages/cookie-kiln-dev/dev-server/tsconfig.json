{
  "compilerOptions": {
	"composite": true,
	"module": "CommonJS",
	"moduleResolution": "Node",

	"outDir": "build",
	"inlineSourceMap": true,

	"strict": true,
	"esModuleInterop": true,
	"lib": [
	  "esnext",
	  "dom"
	],
	"types": ["node"]
  },
  "include": [
	"environment.ts",
	"run.ts",
	"server.ts",
	"lib/**/*.ts"
  ],
  "exclude": ["./public"]
}
